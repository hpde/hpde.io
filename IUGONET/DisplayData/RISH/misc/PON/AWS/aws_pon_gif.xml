      <InstrumentID>spase://IUGONET/Instrument/RISH/misc/PON/AWS</InstrumentID>
      <MeasurementType>NeutralGas</MeasurementType>
      <TemporalDescription>
         <TimeSpan>
            <StartDate>2008-03-16T17:00:00</StartDate>
            <RelativeStopDate>-P6M</RelativeStopDate>
         </TimeSpan>
         <Cadence>P1D</Cadence>
      </TemporalDescription>
      <ObservedRegion>Earth.Surface</ObservedRegion>
      <ObservedRegion>Earth.NearSurface.Atmosphere</ObservedRegion>
      <SpatialCoverage>
         <CoordinateSystem>
            <CoordinateRepresentation>Spherical</CoordinateRepresentation>
            <CoordinateSystemName>WGS84</CoordinateSystemName>
         </CoordinateSystem>
         <NorthernmostLatitude>-0.00</NorthernmostLatitude>
         <SouthernmostLatitude>-0.00</SouthernmostLatitude>
         <EasternmostLongitude>109.37</EasternmostLongitude>
         <WesternmostLongitude>109.37</WesternmostLongitude>
      </SpatialCoverage>
      <Keyword>EARTH SCIENCE Atmosphere Atmospheric Phenomena</Keyword>
      <Parameter>
         <Name>year</Name>
         <Description>Year in the form YYYY where Gregorian Year AD.</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>month</Name>
         <Description>Month in the form MMM where MMM = month of year (Jan, Feb,..., Dec).</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>day</Name>
         <Description>Day in the form DD where DD = day of month (01-31).</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>time</Name>
         <Description>Time in the form hh where hh = hour of day (0-23). Local time (UT+07:00:00) is used for time data.</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>pressure</Name>
         <Description>Pressure</Description>
         <Units>hPa</Units>
         <ValidMin>1000</ValidMin>
         <ValidMax>1020</ValidMax>
         <Particle>
            <ParticleType>Molecule</ParticleType>
            <ParticleQuantity>Pressure</ParticleQuantity>
         </Particle>
      </Parameter>
      <Parameter>
         <Name>temperature</Name>
         <Description>Temperature</Description>
         <Units>degree</Units>
         <ValidMin>20</ValidMin>
         <ValidMax>40</ValidMax>
         <Particle>
            <ParticleType>Molecule</ParticleType>
            <ParticleQuantity>Temperature</ParticleQuantity>
         </Particle>
      </Parameter>
      <Parameter>
         <Name>relative humidity</Name>
         <Description>Relative humidity</Description>
         <Units>%</Units>
         <ValidMin>30</ValidMin>
         <ValidMax>100</ValidMax>
         <Support>
            <SupportQuantity>Other</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>solar radiation</Name>
         <Description>Solar radiation</Description>
         <Units>kW/m^2</Units>
         <ValidMin>0.0</ValidMin>
         <ValidMax>1.25</ValidMax>
         <Wave>
            <WaveType>Electromagnetic</WaveType>
            <WaveQuantity>EnergyFlux</WaveQuantity>
         </Wave>
      </Parameter>
      <Parameter>
         <Name>wind speed</Name>
         <Description>Wind speed</Description>
         <Units>m/s</Units>
         <ValidMin>0</ValidMin>
         <ValidMax>5</ValidMax>
         <Particle>
            <ParticleType>Molecule</ParticleType>
            <ParticleQuantity>Velocity</ParticleQuantity>
         </Particle>
      </Parameter>
      <Parameter>
         <Name>wind direction</Name>
         <Description>Wind direction</Description>
         <Units>degree</Units>
         <ValidMin>0</ValidMin>
         <ValidMax>360</ValidMax>
         <Support>
            <SupportQuantity>Other</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>rain amount</Name>
         <Description>Rain amount</Description>
         <Units>mm</Units>
         <ValidMin>0.0</ValidMin>
         <FillValue>60.0</FillValue>
         <Support>
            <SupportQuantity>Other</SupportQuantity>
         </Support>
      </Parameter>
