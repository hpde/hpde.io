         <TimeSpan>
            <StartDate>1994-04-29T15:00:00</StartDate>
            <RelativeStopDate>-P1D</RelativeStopDate>
         </TimeSpan>
         <Cadence>P1D</Cadence>
      </TemporalDescription>
      <ObservedRegion>Earth.Surface</ObservedRegion>
      <ObservedRegion>Earth.NearSurface.Atmosphere</ObservedRegion>
      <SpatialCoverage>
         <CoordinateSystem>
            <CoordinateRepresentation>Spherical</CoordinateRepresentation>
            <CoordinateSystemName>WGS84</CoordinateSystemName>
         </CoordinateSystem>
         <NorthernmostLatitude>34.856</NorthernmostLatitude>
         <SouthernmostLatitude>34.856</SouthernmostLatitude>
         <EasternmostLongitude>136.106</EasternmostLongitude>
         <WesternmostLongitude>136.106</WesternmostLongitude>
      </SpatialCoverage>
      <Keyword>EARTH SCIENCE Atmosphere Atmospheric Phenomena</Keyword>
      <Parameter>
         <Name>year</Name>
         <Description>Year in the form YYYY where Gregorian Year AD.</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>month</Name>
         <Description>Month in the form MMM where MMM = month of year (Jan, Feb,..., Dec).</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>day</Name>
         <Description>Day in the form DD where DD = day of month (01-31).</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>time</Name>
         <Description>Time in the form hh where hh = hour of day (0-23). Local time (UT+09:00:00) is used for time data.</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>pressure</Name>
         <Description>Air pressure</Description>
         <Units>hPa</Units>
         <ValidMin>950</ValidMin>
         <ValidMax>990</ValidMax>
         <Particle>
            <ParticleType>Molecule</ParticleType>
            <ParticleQuantity>Pressure</ParticleQuantity>
         </Particle>
      </Parameter>
      <Parameter>
         <Name>temperature</Name>
         <Description>Air temperature</Description>
         <Units>degree</Units>
         <ValidMin>-10</ValidMin>
         <ValidMax>40</ValidMax>
         <Particle>
            <ParticleType>Molecule</ParticleType>
            <ParticleQuantity>Temperature</ParticleQuantity>
         </Particle>
      </Parameter>
      <Parameter>
         <Name>Humidity</Name>
         <Description>Relative humidity</Description>
         <Units>%</Units>
         <ValidMin>0</ValidMin>
         <ValidMax>100</ValidMax>
         <Support>
            <SupportQuantity>Other</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>wind</Name>
         <Description>Wind speed</Description>
         <Units>m/s</Units>
         <ValidMin>0</ValidMin>
         <ValidMax>10</ValidMax>
         <Particle>
            <ParticleType>Molecule</ParticleType>
            <ParticleQuantity>Velocity</ParticleQuantity>
         </Particle>
      </Parameter>
      <Parameter>
         <Name>direction</Name>
         <Description>Wind direction</Description>
         <Units>degree</Units>
         <ValidMin>0</ValidMin>
         <ValidMax>360</ValidMax>
         <Support>
            <SupportQuantity>Other</SupportQuantity>
         </Support>
      </Parameter>
