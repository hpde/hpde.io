<?xml version="1.0" encoding="UTF-8"?>
<Spase xmlns="http://www.spase-group.org/data/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.spase-group.org/data/schema  http://www.spase-group.org/data/schema/spase-2_7_0.xsd">
   <Version>2.7.0</Version>
   <Catalog>
      <ResourceID>spase://ESA/Catalog/SolarOrbiter/STIX/STIX_Flare_List</ResourceID>
      <NamingAuthority>ESA</NamingAuthority>
      <ResourceType>Catalog</ResourceType>
      <ResourceHeader>
         <ResourceName>STIX Flare List</ResourceName>
         <ReleaseDate>2025-04-01T00:08:46</ReleaseDate>
         <Description>A list of solar flares detected by STIX on Solar Orbiter.</Description>
         <Contact>
            <PersonID>spase://SMWG/Person/Samuel.Krucker</PersonID>
            <Role>PrincipalInvestigator</Role>
         </Contact>
      </ResourceHeader>
      <AccessInformation>
         <RepositoryID>spase://ESA/Repository/SolarOrbiter/STIXDataCenter</RepositoryID>
         <AccessURL>
            <Name>STIX flare list</Name>
            <URL>https://datacenter.stix.i4ds.net/view/flares/list</URL>
            <Style>Listing</Style>
         </AccessURL>
         <Format>HTML</Format>
         <Encoding>None</Encoding>
      </AccessInformation>
      <PhenomenonType>SolarFlare</PhenomenonType>
      <TimeSpan>
         <StartDate>2020-05-08T07:11:33</StartDate>
         <RelativeStopDate>-P1D</RelativeStopDate>
         <Note>Low-latency telemetry data generally arrive at the STIX Data Center within a few days, depending on the next ground station pass.</Note>
      </TimeSpan>
      <Parameter>
         <Name>Entry ID</Name>
         <Support>
            <SupportQuantity>Other</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>Flare ID</Name>
         <Support>
            <SupportQuantity>Other</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>Peak UTC</Name>
         <Description>Flare Peak Time</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>Duration</Name>
         <Description>Flare Duration</Description>
         <Support>
            <SupportQuantity>Temporal</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>Peak CPS</Name>
         <Wave>
            <WaveType>Photon</WaveType>
            <WaveQuantity>Intensity</WaveQuantity>
         </Wave>
      </Parameter>
      <Parameter>
         <Name>GOES Observed</Name>
         <Description>GOES X-ray Class</Description>
         <Support>
            <SupportQuantity>Other</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>Est. GOES</Name>
         <Description>Estimated GOES X-ray Class</Description>
         <Wave>
            <WaveType>Photon</WaveType>
            <WaveQuantity>Intensity</WaveQuantity>
            <WavelengthRange>
               <SpectralRange>SoftXRays</SpectralRange>
               <Low>1</Low>
               <High>8</High>
               <Units>Angstrom</Units>
            </WavelengthRange>
         </Wave>
      </Parameter>
      <Parameter>
         <Name>QL Light Curves</Name>
         <Description>A link to Quick-Look Light Curves</Description>
         <Support>
            <SupportQuantity>WebService</SupportQuantity>
         </Support>
      </Parameter>
      <Parameter>
         <Name>Data Products</Name>
         <Description>A link to STIX Data Products</Description>
         <Support>
            <SupportQuantity>WebService</SupportQuantity>
         </Support>
      </Parameter>
   </Catalog>
